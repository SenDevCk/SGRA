<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sgra.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg1" />

    <ImageView
        android:id="@+id/icon_sgra"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/cap_school" />

    <TextView
        android:id="@+id/text_head_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_sgra"
        android:layout_centerHorizontal="true"
        android:text="SGRA"
        android:textColor="@color/holo_green_light"
        android:textSize="30sp" />
    <ProgressBar
        android:id="@+id/p_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:progressTint="@android:color/holo_red_light"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/text_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_bar"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_light"
        android:text="Loading..."/>

</RelativeLayout>
